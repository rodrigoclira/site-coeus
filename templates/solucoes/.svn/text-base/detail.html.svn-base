	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
		<div class="page">
			<div class="header">
				<a href="/" id="logo"><img src="/media/images/marca.png" alt=""/></a>
				<ul>
					<li><a href="/">Home</a></li>
					<li ><a href="/quem-somos/">Quem Somos</a></li>
					<li><a href="/areas-de-atuacao/">Áreas de Atuação</a></li>
					<li><a href="/solucoes/">Soluções</a></li>
					<li><a href="/blog/">Blog</a></li>
					<li><a href="/contato/">Contato</a></li>                                       
				</ul>
			</div>
			<div class="body">	
             <div id="banerTitleWrap" >
                    <div id="bannerB">                               
                        <div id="chipL"></div>
                        <span id="rib"></span>
                       <span id="Title">Soluções</span>
                    </div>
                 </div>
                <div class="navigation">
                	<ul class="navigationList">
                    	<li>
                        	<a href="/">Home</a>
                            &raquo; 					 											
                        </li>
                        <li>
                        	<a href="/solucoes/">Soluções</a> 
                             &raquo;                           
                        </li>
                         <li>
                        	<a href="#">{{ produto.name }}</a>                            
                        </li>
                    </ul>
                </div>				                     			                             
                <h2> {{ produto.name }} </h2>
                <div class="rigthColumn">
                
                <div class="productDescription">                       
                    <img class="ImageBorderShadow" src="/media/{{ produto.image }}"/>
                    <h3> Descrição</h3>
					<div class="fb-like" data-send="false" data-layout="button_count" data-width="450" data-show-faces="true" data-font="arial"></div>
                    {{ produto.description|safe }}
                </div>
                </div>
                 <div class="leftColumn">
                	<div class="recentProducts">
                        <div id="banerWrap">
                            <div id="bannerB">
                                <div id="chipR"></div>
                                <div id="chipL"></div>
                                Soluções Recentes
                            </div>
                        </div>
                        <ul>                        	
						{% for produto in produtos %}
                            <li><a>{{ produto.name }}</a></li>
						{% empty %}
							Sem produtos recentes
						{% endfor %}
                        </ul>
                    </div>                                      
                </div>               							
                 				
			</div>
			<div class="footer">				
				<div id="Contato">
                	<p id="icoLinks">
						<a target="_blank" href="http://facebook.com/CoeusIT"><img src="/media/images/facebook.png"></a>
						<a target="_blank" href="http://twitter.com/coeusti"><img src="/media/images/twitter.png"></a>
                        <a target="_blank" href="http://www.linkedin.com/company/2689286"><img src="/media/images/linkedinfooter.png"/></a>
					</p>
                    <p> contato@coeus.com.br - (81) 3183-4349</p>                	
                	<p> Av. Prof. Luiz Freire, 700, Bloco C, Sala 24, CDU - Recife-PE</p>	                
                	<p &#169; {{ year }}. Coeus</p>               				                					
				</div>
			</div>
		</div>
	</body>
</html>  
